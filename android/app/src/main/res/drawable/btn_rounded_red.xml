<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:radius="60dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
                    <solid android:color="@color/red_400" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                    <size android:width="110dp" android:height="40dp" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item>
        <layer-list>
            <item android:bottom="@dimen/_4sdp" android:left="@dimen/_4sdp" android:right="@dimen/_4sdp" android:top="@dimen/_4sdp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/_30sdp" android:bottomRightRadius="@dimen/_30sdp" android:radius="@dimen/_60sdp" android:topLeftRadius="@dimen/_30sdp" android:topRightRadius="@dimen/_30sdp" />
                    <solid android:color="@color/red_300" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                    <size android:width="@dimen/_100sdp" android:height="@dimen/_40sdp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>